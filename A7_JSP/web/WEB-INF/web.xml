<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- ServletPathTest -->
    <servlet>
        <servlet-name>ServletPathDemo</servlet-name>
        <servlet-class>a1_ClientPathAndServerPath.ServletPathDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPathDemo</servlet-name>
        <url-pattern>/a1_ClientPathAndServerPath.ServletPathDemo</url-pattern>
    </servlet-mapping>

    <!-- a2_Goto.GotoTest -->
    <servlet>
        <servlet-name>ServletGoto</servlet-name>
        <servlet-class>a2_Goto.GotoTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletGoto</servlet-name>
        <url-pattern>/goto</url-pattern>
    </servlet-mapping>

    <!-- Login -->
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>a3_MVCLoginTest.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- JSP_EL_JSTL 显示数据库信息 -->
    <servlet>
        <servlet-name>DBShow</servlet-name>
        <servlet-class>a4_JSP_EL_JSTL.control.ServletShowDB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBShow</servlet-name>
        <url-pattern>/DBShow</url-pattern>
    </servlet-mapping>
</web-app>